{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "C/C++: Run Active File",
            "type": "shell",
            "command": "./${fileBasenameNoExtension}",  // Assumes the executable is in the same directory
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "focus": true,
                "panel": "shared",
                "reveal": "always"
            }
        }
    ],
    "version": "2.0.0"
}
